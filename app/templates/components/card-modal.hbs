<div class="modal-background">
  <div class="modal-frame">
    <div class="modal-title">
      {{title}}
    </div>
    <div class="modal-body">
      {{body}}
    </div>
    <div class="modal-footer">
      <button {{action 'closeModal'}} type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      <button {{action 'deleteCard' card}} type="button" class="btn btn-default" data-dismiss="modal">Delete</button>
    </div>
  </div>
</div>