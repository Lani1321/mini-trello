<div class="modal-background">
  <div class="modal-frame">
    <div class="modal-title">
      
      {{!-- Edit card name  --}}
      {{#if isEditingName}}
        <form {{action 'toggleEdit' on="submit"}}>
          {{input value=card.name placeholder="Card Name"}}
          <button {{action 'toggleEdit'}}>Done</button>
        </form>
      {{else}}
        {{title}} <i {{ action 'toggleEdit'}} class="glyphicon glyphicon-pencil"></i>
      {{/if}}
    </div>
    <div class="modal-body">
      {{body}}
    </div>
    <div class="modal-footer">
      <button {{action 'closeModal'}} type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      <button {{action 'deleteCard' card}} type="button" class="btn btn-default" data-dismiss="modal">Delete</button>
    </div>
  </div>
</div>